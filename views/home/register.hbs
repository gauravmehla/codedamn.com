{{>stickyheader}}
<script src='https://www.google.com/recaptcha/api.js'></script>

<div class="contact-form">
	<form class="contact_form" action="/register" method="post" name="contact_form">
		<h1>Register Account</h1>
	    <ul>
			<li>
	            <input type="text" class="textbox1" name="name" placeholder="Name" autocomplete="false">
	             <p><img src="/assets/images/png/contact.png" alt=""></p>
	        </li>
	        <li>
	            <input type="text" class="textbox1" name="username" placeholder="Username" autocomplete="false">
	             <p><img src="/assets/images/png/contact.png" alt=""></p>
	        </li>
            <li>
	            <input type="email" class="textbox1" name="email" placeholder="Email ID" autocomplete="false">
	             <p><img src="/assets/images/png/contact.png" alt=""></p>
	        </li>
	        <li>
	            <input type="password" name="password" class="textbox2" placeholder="Password">
	            <p><img src="/assets/images/png/lock.png" alt=""></p>
	        </li>
            <li>
	            <input type="password" name="cpassword" class="textbox2" placeholder="Confirm Password">
	            <p><img src="/assets/images/png/lock.png" alt=""></p>
	        </li>
         </ul>
         <div id="captcha">
            <div class="g-recaptcha" data-sitekey="{{captchSiteKey}}"></div>
         </div>
       	 	<input type="submit" name="register" value="Register">
	</form>
</div>